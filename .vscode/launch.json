    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Chrome Extension debugging",
            "port": 9222,
            "url": "<URL>",
            "webRoot": "${workspaceFolder}/js/js.js"
        }
    ]
}