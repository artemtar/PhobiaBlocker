{
    "manifest_version": 3,
    "name": "PhobiaBlocker",
    "version": "1.0.3",
    "description": "Intelligently blur images on web pages that might contain content related to your specific phobias using NLP text analysis.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html",
        "default_title": "PhobiaBlocker"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/jquery-3.7.1.min.js",
            "js/compromise.min.js",
            "js/natural.js",
            "js/stopWords.js",
            "js/js.js"
        ],
        "css": [
            "css/style.css"
        ],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [{
        "resources": ["css/style.css"],
        "matches": ["<all_urls>"]
    }],
    "background": {
        "service_worker": "js/background.js"
    },
    "commands": {
        "blur-all": {
            "suggested_key": {
                "default": "Alt+Shift+B",
                "mac": "Alt+Shift+B"
            },
            "description": "Blur all images on the page"
        },
        "unblur-all": {
            "suggested_key": {
                "default": "Alt+Shift+U",
                "mac": "Alt+Shift+U"
            },
            "description": "Unblur all images on the page"
        }
    },
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}