{
    "manifest_version": 3,
    "name": "PhobiaBlocker",
    "version": "0.1",
    "action": {
        "default_icon": "./icons/main.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/jquery-3.7.1.min.js",
            "js/compromise.min.js",
            "js/natural.js",
            "js/stopWords.js",
            "js/js.js"
        ],
        "css": [
            "css/style.css"
        ]
    }],
    "web_accessible_resources": [{
        "resources": ["css/style.css"],
        "matches": ["<all_urls>"]
    }],
    "background": {
        "service_worker": "js/background.js"
    },
    "commands": {
        "blur-all": {
            "suggested_key": {
                "default": "Alt+Shift+B",
                "mac": "Alt+Shift+B"
            },
            "description": "Blur all images on the page"
        },
        "unblur-all": {
            "suggested_key": {
                "default": "Alt+Shift+U",
                "mac": "Alt+Shift+U"
            },
            "description": "Unblur all images on the page"
        }
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}